<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/card_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yahoo"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/card_date"
        android:text="May 5, 2022"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/grey"
        android:layout_marginBottom="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/card_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chrome"
            android:src="@drawable/icons8_chrome_48"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:elevation="0dp"/>
        <ImageView
            android:id="@+id/twitter"
            android:src="@drawable/icons8_twitter_circled_48"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:elevation="0dp"/>
        <ImageView
            android:id="@+id/facebook"
            android:src="@drawable/icons8_facebook_48"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:elevation="0dp"/>
    </LinearLayout>
</LinearLayout>